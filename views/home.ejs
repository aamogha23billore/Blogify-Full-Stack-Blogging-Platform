<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("./partials/head") %>
  <title>Blogify Home</title>
</head>
<body>
  <%- include("./partials/nav") %>

  <div class="container mt-4">

    <!-- Flash Messages -->
    <!-- THE FIX: Use `typeof` to check if the variable exists at all -->
    <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <!-- THE FIX: Use `typeof` to check if the variable exists at all -->
    <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="Blog Cover Image" style="height: 200px; object-fit: cover;">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text text-muted">By <%= blog.createdBy.fullName %></p>
              
              <div class="mt-auto">
                <a href="/blog/<%= blog._id %>" class="btn btn-primary w-100 mb-2">View</a>

                <!-- Show Edit and Delete buttons only for the blog owner -->
                <% if (user && blog.createdBy && user._id.toString() === blog.createdBy._id.toString()) { %>
                  <div class="d-flex gap-2">
                    <!-- Edit Button -->
                    <a href="/blog/<%= blog._id %>/edit" class="btn btn-warning w-100">Edit</a>
                    
                    <!-- THE CORRECT DELETE FORM -->
                    <form action="/blog/<%= blog._id %>" method="POST" class="w-100">
                      <input type="hidden" name="_method" value="DELETE">
                      <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Are you sure you want to delete this blog?');">
                        Delete
                      </button>
                    </form>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <%- include("./partials/scripts") %>
</body>
</html>